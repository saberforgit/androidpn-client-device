<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/notify_header"
                android:src="@drawable/pander"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:id="@+id/notify_title"
                android:text="dsagdsakdjjgakshsakjga"
                android:inputType="none"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/notify_des"
            android:text="dsgsadgafffffffffffffffffffffffffffffffdsads"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:autoLink="all"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/notify_url"
            android:text="dsgsadgasgffffffffffffffffffffffffffffffffffffffffffffdsads"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="消息发送时间:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgCTime"
            android:textSize="20dp"
            android:text="as"/>
    </LinearLayout>


    </RelativeLayout>